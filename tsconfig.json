{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@resources/*": [
        "./src/resources/*"
      ],
      "@services/*":[
        "./src/services/*"
      ],
      "@ui/*": [
        "./src/ui/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
